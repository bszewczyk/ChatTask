@model IEnumerable<Chat.Database.DTO.Room>

@{
	ViewBag.Title = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
	@Scripts.Render("~/bundles/jquery")
	<script src="../../Scripts/Home.js"></script>
</head>
<body>
	<div id="AddRoom" style="margin-top:10px;">

		<p>
			<input type="text" id="txtRoomName" />
			<input type="button" id="btnAdd" value="Create new room" />
		</p>
	</div>
	<table id="tableOfRooms" class="table" cellpadding="0" cellspacing="0">
		<thead>
			<tr>
				<th style="width:150px">Room Name</th>
				<th style="width:150px"></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (Chat.Database.DTO.Room room in Model)
			{
				<tr>
					<td>@room.RoomName</td>
					<td><button onclick="location.href='@Url.Action("Index", "Room",  new {roomId= room.RoomId})'">Join</button></td>
				</tr>
            }
		</tbody>

	</table>
	</body>
</html>